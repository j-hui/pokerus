[settings]
screenchange-reload = true
throttle-ms = 50
throttle-limit = 5
; compositing-background = xor
; compositing-background = screen
; compositing-foreground = source
; compositing-border = over

[global/wm]
margin-top = 8
margin-bottom = 8

[symbols]
; requires font awesome (?)
ramp-0 = ▁
ramp-1 = ▂
ramp-2 = ▃
ramp-3 = ▄
ramp-4 = ▅
ramp-5 = ▆
ramp-6 = ▇
ramp-7 = █

volume-ramp-0 = VOL:
volume-ramp-1 = VOL:
volume-ramp-2 = VOL:
muted = MUTE

[colors]
; yellow
primary = #fba922
primary-alt = #dc8904

; red
secondary = #bd2c40
secondary-alt = #9b0a20

; black
background = #222
background-alt = #444

; white
foreground = #fafafafa
foreground-alt = #69696969

alert = ${colors.secondary}
alert-alt = ${colors.secondary-alt}
line = ${colors.primary}
border = ${colors.background}

[bar/top]
enable-ipc = true

; monitor = eDP-1
width = 100%
height = 27

background = ${colors.background}
foreground = ${colors.foreground}

line-color = ${colors.line}
line-size = 3

spacing = 3
lineheight = 2
padding-left = 4
padding-right = 4
module-margin-left = 4
module-margin-right = 4

; font-0 = fixed:pixelsize=10;1
; font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
; font-2 = siji:pixelsize=10;1
font-0 = NotoSans-Regular:size=10;0
font-1 = Font Awesome:size=8;-2

modules-left = bspwm
; modules-center = xwindow
modules-right = xkeyboard volume clock

tray-position = right
tray-padding = 4

[bar/bottom]
enable-ipc = true

; monitor = HDMI-1
bottom = true
width = 100%
height = ${bar/top.height}

background = ${bar/top.background}
foreground = ${bar/top.foreground}
line-color = ${bar/top.line-color}
spacing = ${bar/top.spacing}
lineheight = ${bar/top.lineheight}
padding-left = ${bar/top.padding-left}
padding-right = ${bar/top.padding-right}
module-margin-left = ${bar/top.module-margin-left}
module-margin-right = ${bar/top.module-margin-right}

font-0 = NotoSans-Regular:size=8;0
font-1 = FontAwesome:size=8;-2
; font-2 = ypn envypn:size=10;-1
; font-4 = Unifont:size=6;-3
; font-5 = MaterialIcons:size=8;-3

modules-left = temperature battery wlan
modules-center = xwindow
modules-right = eth memory cpu

[module/bspwm]
type = internal/bspwm
format = <label-state> <label-mode>

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary-alt}
label-focused-foreground = ${colors.foreground}
label-focused-padding = 4

label-occupied = %index%
label-occupied-underline = ${colors.primary-alt}
label-occupied-padding = 4

label-urgent = %index%!
label-urgent-foreground = ${colors.foreground}
label-urgent-background = ${colors.alert}
label-urgent-underline = ${colors.alert-alt}
label-urgent-padding = 4

label-empty = %index%
label-empty-foreground = ${colors.foreground}
label-empty-padding = 4

padding = 2

label-monocle = ^
label-monocle-foreground = ${colors.secondary}
label-monocle-underline = ${colors.secondary}
label-monocle-padding = ${module/bspwm.padding}

label-locked = .
label-locked-foreground = ${colors.secondary}
label-locked-underline = ${colors.secondary}
label-locked-padding = ${module/bspwm.padding}

label-sticky = =
label-sticky-foreground = ${colors.secondary}
label-sticky-underline = ${colors.secondary}
label-sticky-padding = ${module/bspwm.padding}

label-private = /
label-private-foreground = ${colors.secondary}
label-private-underline = ${colors.secondary}
label-private-padding = ${module/bspwm.padding}

[module/xwindow]
type = internal/xwindow
label = %title:0:69:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

label-layout = %name%
label-layout-underline = ${colors.secondary}
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}

[module/cpu]
type = internal/cpu
interval = 1
label = CPU: %percentage%%

format = <label> <ramp-coreload>
ramp-coreload-0 = ${symbols.ramp-0}
ramp-coreload-1 = ${symbols.ramp-1}
ramp-coreload-2 = ${symbols.ramp-2}
ramp-coreload-3 = ${symbols.ramp-3}
ramp-coreload-4 = ${symbols.ramp-4}
ramp-coreload-5 = ${symbols.ramp-5}
ramp-coreload-6 = ${symbols.ramp-6}
ramp-coreload-7 = ${symbols.ramp-7}

[module/memory]
type = internal/memory
interval = 1
label = MEM: %gb_used% / %gb_total%

; [module/wlan]
; type = internal/network
; interface = net1
; interval = 3.0
;
; format-connected = <ramp-signal> <label-connected>
; format-connected-underline = #9f78e1
; label-connected = %essid%
;
; format-disconnected = X
; ;format-disconnected = <label-disconnected>
; ;format-disconnected-underline = ${self.format-connected-underline}
; ;label-disconnected = %ifname% disconnected
; ;label-disconnected-foreground = ${colors.foreground-alt}
;
; ramp-signal-0 = ▁
; ramp-signal-1 = ▂
; ramp-signal-2 = ▃
; ramp-signal-3 = ▅
; ramp-signal-4 = ▆
; ramp-signal-5 = █
; ramp-signal-foreground = ${colors.foreground-alt}

[module/eth]
type = internal/network
interface = eno1
interval = 3.0

format-connected = <label-connected>
label-connected = %ifname%: %local_ip% (%downspeed% : %upspeed%)

format-disconnected = <label-disconnected>
label-disconnected = %ifname%: disconnected

[module/clock]
type = internal/date
date = %Y-%m-%d %H:%M:%S
interval = 1.0

[module/volume]
; type = internal/alsa
type = internal/pulseaudio

format-muted = <label-muted>
label-muted = ${symbols.muted}

format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%
ramp-volume-0 = ${symbols.volume-ramp-0}
ramp-volume-1 = ${symbols.volume-ramp-1}
ramp-volume-2 = ${symbols.volume-ramp-1}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98

format-charging = <animation-charging> <label-charging>
format-charging-underline = #ffb52a

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${self.format-charging-underline}

format-full = <ramp-capacity> <label-full>
format-full-prefix = " "
format-full-prefix-foreground = ${colors.foreground-alt}
format-full-underline = ${self.format-charging-underline}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-foreground = ${colors.foreground-alt}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-foreground = ${colors.foreground-alt}
animation-charging-framerate = 750

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <label>
format-underline = #f50a4d
format-warn = <label-warn>

label = Temp: %temperature%
label-warn = Temp: %temperature%
label-warn-foreground = ${colors.alert-alt}
label-warn-underline = ${colors.alert-alt}

