[settings]
screenchange-reload = true
throttle-ms = 50
throttle-limit = 5

; compositing-background = xor
; compositing-background = screen
; compositing-foreground = source
; compositing-border = over

[global/wm]
; NOTE: these hints don't actually work so well or consistently,
; so instead we'll just manually coordinate with bspwmrc.
; margin-top = 27
; margin-bottom = 27

include-file = ~/.config/polybar/colors.ini
include-file = ~/.config/polybar/symbols.ini
include-file = ~/.config/polybar/fonts.ini

include-file = ~/.config/polybar/hardware-modules.ini
include-file = ~/.config/polybar/desktop-modules.ini

[bar/base]
enable-ipc = true

width = 100%
height = 27

background = ${color.background}
foreground = ${color.foreground}
line-color = ${color.accent}

line-size = 2
lineheight = 2

spacing = 3
padding-left = 4
padding-right = 4

module-margin-left = 4
module-margin-right = 4

font-0 = ${fonts.font-0}
font-1 = ${fonts.font-1}
font-2 = ${fonts.font-2}

; monitor = eDP-1

[bar/top]
inherit = bar/base
bottom = false
modules-left = powermenu bspwm
modules-right = xkeyboard volume clock
tray-position = right
tray-padding = 4

[bar/bottom]
inherit = bar/base
bottom = true
modules-left = temperature-hwmon temperature-zone avg-battery wlan spotify-tui
modules-center = xwindow
modules-right = eth memory cpu

; vim:ft=dosini
