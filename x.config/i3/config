# i3 config file (v4)
# See https://i3wm.org/docs/userguide.html for a complete reference

font pango:SauceCodePro Nerd Font Mono 13
workspace_layout stacking
focus_follows_mouse no
focus_wrapping no
popup_during_fullscreen smart

exec_always --no-startup-id ~/.local/tms/notifyctl restart
exec_always --no-startup-id xset r rate 250 69
exec_always --no-startup-id xsetroot -cursor_name left_ptr

default_border normal 3

set_from_resource   $bg             i3bg
set_from_resource   $bg_hi          i3bg_hi
set_from_resource   $bg_urg         i3bg_urg

set_from_resource   $text           i3text
set_from_resource   $text_hi        i3text_hi
set_from_resource   $text_urg       i3text_urg

set_from_resource   $border         i3border
set_from_resource   $border_hi      i3border_hi
set_from_resource   $border_urg     i3border_urg

# class                     border      background  text        indicator   child_border
client.unfocused            $border     $bg         $text       $text_urg   $border
client.placeholder          $border     $bg         $text       $text_urg   $border
client.focused_inactive     $border     $bg         $text_hi    $text_urg   $border
client.focused              $border_hi  $bg_hi      $text_hi    $text_urg   $border_hi
client.urgent               $border_urg $bg_urg     $text_urg   $text_urg   $border_urg

client.background           $bg

include ~/.config/i3/rules
include ~/.config/i3/bindings
include ~/.config/i3/bar

#  vim: set ts=4 sw=0 tw=80 et ft=i3config :
