#!/usr/bin/env bash

# xrandr presets

set -euf

if [ "$#" -ne 1 ]; then
    echo "Usage: $0 <preset>"
    exit 1
fi

case "$1" in
  auto)
    xrandr --auto
    ;;
  haunter-dock)
    xrandr --output DP-2-2 --off && \
      xrandr --output DP-2-2 --primary --auto --output eDP-1 --right-of DP-2-2
    ;;
  *)
    echo "Error: Unknown preset."
    exit 1
esac
