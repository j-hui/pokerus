[init]
    defaultbranch = main
[diff]
    mnemonicPrefix = true
[push]
    default = simple
[pull]
    rebase = false
[alias]
    co = checkout
    st = status
    br = branch --sort=committerdate
    ps = push
    pl = pull
    cp = cherry-pick

    ci = commit
    ca = commit --amend
    cm = !git add -u && git commit -m

    this = rev-parse --abbrev-ref HEAD
    root = rev-parse --show-toplevel

    last = log -1 --oneline --color
    hist = log --graph --date=short --color
    unpushed = log @{u}..
    ups      = log @{u}..
    branches = "!git for-each-ref --sort='-authordate' --format='%(authordate)%09%(objectname:short)%09%(refname)' refs/heads | sed -e 's-refs/heads/--'"
    brs      = "!git for-each-ref --sort='-authordate' --format='%(authordate)%09%(objectname:short)%09%(refname)' refs/heads | sed -e 's-refs/heads/--'"

    rs      = restore
    us      = restore --staged
    unstage = restore --staged

    d  = diff
    df = diff
    dw = diff --word-diff
    dc = diff --cached

    m  = merge
    mg = merge
    mc = merge --continue
    ma = merge --abort

    r  = rebase
    rb = rebase
    rc = rebase --continue
    ra = rebase --abort
[color]
    ui = auto
[core]
    excludesfile = ~/.gitignore_global
[commit]
    verbose = true

[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta

[interactive]
    diffFilter = delta --color-only --features=interactive

[delta]
    features = decorations

[delta "interactive"]
    keep-plus-minus-markers = false

[delta "decorations"]
    commit-decoration-style = blue ol
    commit-style = raw
    file-style = omit
    hunk-header-decoration-style = blue box
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax
;  vim: set ts=4 sw=0 tw=80 et ft=gitconfig :
