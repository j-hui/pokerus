[init]
    defaultbranch = main
[diff]
    mnemonicPrefix = true
[push]
    default = simple
[pull]
    rebase = false
[alias]
    co = checkout
    br = branch
    ci = commit
    st = status
    rem = remote -v
    unstage = reset HEAD --
    last = log -l HEAD
    visual = !gitk
    cm = !git add -u && git commit -m
    up = !git pull --rebase --prune $@ && git submodule update --init --recursive
    undo = reset HEAD~1 --mixed
    amend = commit --amend
    this = rev-parse --abbrev-ref HEAD
    d = diff
    dw = diff --word-diff
    dc = diff --cached
    cp = cherry-pick
    root = rev-parse --show-toplevel
    conf = config --global -e
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    branches = "!git for-each-ref --sort='-authordate' --format='%(authordate)%09%(objectname:short)%09%(refname)' refs/heads | sed -e 's-refs/heads/--'"
    last = --no-pager log -1 --oneline --color
    unpushed = log @{u}..
[color]
    ui = auto
[core]
    excludesfile = ~/.gitignore_global
[commit]
    verbose = true

[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta

[interactive]
    diffFilter = delta --color-only --features=interactive

[delta]
    features = decorations

[delta "interactive"]
    keep-plus-minus-markers = false

[delta "decorations"]
    commit-decoration-style = blue ol
    commit-style = raw
    file-style = omit
    hunk-header-decoration-style = blue box
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax
